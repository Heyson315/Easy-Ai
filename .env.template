# Azure environment variables (copy to .env and fill with your values)
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here
KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Container Registry (if using Azure Container Registry)
ACR_LOGIN_SERVER=your-registry.azurecr.io
ACR_USERNAME=your-registry-username
ACR_PASSWORD=your-registry-password

# M365 Configuration
M365_TENANT_DOMAIN=your-domain.onmicrosoft.com
SPO_ADMIN_URL=https://your-tenant-admin.sharepoint.com

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
AUDIT_SCHEDULE=weekly