# M365 Security Toolkit - Production Environment Variables
# Copy this file to .env and customize for your environment

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================

# Environment settings
ENVIRONMENT=production
VERSION=1.0.0
TIMEZONE=UTC
LOG_LEVEL=INFO

# Build information (automatically set by CI/CD)
BUILD_DATE=
VCS_REF=

# =============================================================================
# AZURE CONFIGURATION
# =============================================================================

# Azure subscription and tenant
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id

# Service Principal for Azure authentication
AZURE_CLIENT_ID=your-service-principal-app-id
AZURE_CLIENT_SECRET=your-service-principal-secret

# Azure Storage Account for report storage
STORAGE_ACCOUNT_NAME=your-storage-account
STORAGE_ACCOUNT_KEY=your-storage-key
STORAGE_CONTAINER_NAME=m365-audit-reports

# Azure Key Vault for secrets management
KEY_VAULT_NAME=your-keyvault-name
KEY_VAULT_URI=https://your-keyvault-name.vault.azure.net/

# =============================================================================
# M365 CONFIGURATION
# =============================================================================

# M365 tenant information
M365_TENANT_ID=your-m365-tenant-id

# M365 application registration for API access
M365_CLIENT_ID=your-m365-app-id
M365_CLIENT_SECRET=your-m365-app-secret

# SharePoint configuration
M365_SPO_ADMIN_URL=https://your-tenant-admin.sharepoint.com

# =============================================================================
# AUDIT CONFIGURATION
# =============================================================================

# Audit scheduling
AUDIT_SCHEDULE_ENABLED=false
AUDIT_INTERVAL_HOURS=24

# Audit scope configuration
AUDIT_INCLUDE_SPO=true
AUDIT_SKIP_PURVIEW=false
AUDIT_GENERATE_REPORTS=true
AUDIT_UPLOAD_TO_STORAGE=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Application Insights for monitoring
APPLICATION_INSIGHTS_KEY=your-app-insights-key
APPLICATION_INSIGHTS_CONNECTION_STRING=InstrumentationKey=your-app-insights-key

# Log Analytics workspace
LOG_ANALYTICS_WORKSPACE_ID=your-log-analytics-workspace-id
LOG_ANALYTICS_WORKSPACE_KEY=your-log-analytics-key

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Web interface ports
HTTP_PORT=8080
HTTPS_PORT=8443

# Nginx proxy configuration
NGINX_HOST=localhost

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Redis password for caching (if enabled)
REDIS_PASSWORD=your-secure-redis-password

# Certificate store path for Windows authentication
CERT_STORE_PATH=C:\ProgramData\M365Toolkit\certs

# Configuration override path (optional)
CONFIG_OVERRIDE_PATH=./config/production_config.json

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Email notifications
SMTP_SERVER=smtp.office365.com
SMTP_PORT=587
SMTP_USERNAME=notifications@your-domain.com
SMTP_PASSWORD=your-smtp-password

# Teams webhook for notifications
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your-webhook-url

# =============================================================================
# COMPLIANCE CONFIGURATION
# =============================================================================

# Data retention settings
AUDIT_RETENTION_DAYS=365
LOG_RETENTION_DAYS=90
REPORT_RETENTION_DAYS=180

# Compliance requirements
ENABLE_ENCRYPTION_AT_REST=true
ENABLE_AUDIT_LOGGING=true
ENABLE_DATA_CLASSIFICATION=true

# =============================================================================
# DEVELOPMENT OVERRIDES (comment out in production)
# =============================================================================

# Development settings - DO NOT USE IN PRODUCTION
# ENVIRONMENT=development
# LOG_LEVEL=DEBUG
# AUDIT_SCHEDULE_ENABLED=false
# AUDIT_UPLOAD_TO_STORAGE=false